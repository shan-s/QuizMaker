@{
    ViewData["Title"] = "Quiz Generation Result";
}

@if (ViewData["QuizLink"] != null)
{
    <p>Click the link below to access your quiz:</p>
    <a href="@ViewData["QuizLink"]" class="btn btn-primary" target="_blank">Go to Quiz</a>
    
    <div class="mt-3">
        <p>Or copy the link below to share it:</p>
        <textarea id="quizLink" class="form-control" rows="3" readonly>@ViewData["QuizLink"]</textarea>
        <button class="btn btn-secondary mt-2" onclick="copyLink()">Copy Link</button>
    </div>
}
else
{
    <p>There was an issue generating the quiz. Please try again.</p>
}

@section Scripts {
    <script>
        function copyLink() {
            var copyText = document.getElementById("quizLink");
            copyText.select();
            document.execCommand("copy");
            alert("Link copied to clipboard!");
        }
    </script>
}
