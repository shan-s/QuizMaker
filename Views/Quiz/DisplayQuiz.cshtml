@model Quiz

@{
    ViewData["Title"] = "Quiz";
}

<h1>@Model.QuizName</h1>

<form asp-action="Submit" method="post">
    <!-- Hidden field for QuizSessionId -->
    <input type="hidden" asp-for="QuizSessionId" />

    @if (Model.Questions != null)
    {
        <ul>
            @for (int i = 0; i < Model.Questions.Count; i++)
            {
                var question = Model.Questions[i];
                <li>
                    <p class="question-text">Question @(i + 1): @question.QuestionText</p>
                    <ul>
                        <li class="answer-option">
                            <input type="radio" name="Questions[@i].SubmittedAnswer" value="option_A" />
                            A) @question.OptionA
                        </li>
                        <li class="answer-option">
                            <input type="radio" name="Questions[@i].SubmittedAnswer" value="option_B" />
                            B) @question.OptionB
                        </li>
                        <li class="answer-option">
                            <input type="radio" name="Questions[@i].SubmittedAnswer" value="option_C" />
                            C) @question.OptionC
                        </li>
                        <li class="answer-option">
                            <input type="radio" name="Questions[@i].SubmittedAnswer" value="option_D" />
                            D) @question.OptionD
                        </li>
                        <li class="answer-option">
                            <input type="radio" name="Questions[@i].SubmittedAnswer" value="option_E" />
                            E) @question.OptionE
                        </li>
                    </ul>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No questions available.</p>
    }
    <button type="submit" class="submit-button">Submit</button>
</form>

